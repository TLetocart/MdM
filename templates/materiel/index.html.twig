{% extends 'base.html.twig' %}

{% block title %}Liste des Matériels{% endblock %}

{% block body %}
    <div class="container mt-4">
    <table id="materielTable" class="display">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix HT</th>
            <th>TVA</th>
            <th>Prix TTC</th>
            <th>Quantité</th>
            <th>Date de création</th>
            <th>Voir</th>
        </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
            <td>{{ materiel.id }}</td>
            <td>{{ materiel.nom }}</td>
            <td>{{ materiel.prixHt }}</td>
            <td>{{ materiel.tva }}</td>
            <td>{{ materiel.prixTtc }}</td>
            <td>{{ materiel.quantite }}</td>
            <td>{{ materiel.dateDeCreation|date('Y-m-d H:i:s') }}</td>
            <td>
                <button class="btn btn-info btn-sm" onclick="afficherDetails('{{ materiel.id }}')">Voir</button>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

    <script>
        $(document).ready(function() {
            $('#materielTable').DataTable();
        });
    </script>

    </div>
{% endblock %}

